<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sinifSinav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tv_baslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/titleTextSize"
                android:textColor="@color/textColor"
                tools:text="Fatih"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_questionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="30"
                android:textSize="@dimen/hugeTitleTextSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_questionNumberInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Soru"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_questionNumber"
                app:layout_constraintStart_toStartOf="@+id/tv_questionNumber"
                app:layout_constraintTop_toBottomOf="@+id/tv_questionNumber" />

            <ImageView
                android:id="@+id/iv_questionIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_questions_icon"
                app:layout_constraintEnd_toEndOf="@+id/tv_questionNumberInfo"
                app:layout_constraintStart_toStartOf="@+id/tv_questionNumberInfo"
                app:layout_constraintTop_toBottomOf="@+id/tv_questionNumberInfo"/>

            <TextView
                android:id="@+id/tv_correctNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="30"
                android:textSize="@dimen/hugeTitleTextSize"
                app:layout_constraintStart_toEndOf="@+id/tv_questionNumber"
                app:layout_constraintEnd_toStartOf="@+id/tv_wrongNumber"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_correctNumberInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Doğru"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_correctNumber"
                app:layout_constraintStart_toStartOf="@+id/tv_correctNumber"
                app:layout_constraintTop_toBottomOf="@+id/tv_correctNumber" />

            <ImageView
                android:id="@+id/iv_greenTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_green_tick"
                app:layout_constraintEnd_toEndOf="@+id/tv_correctNumberInfo"
                app:layout_constraintStart_toStartOf="@+id/tv_correctNumberInfo"
                app:layout_constraintTop_toBottomOf="@+id/tv_correctNumberInfo"/>

            <TextView
                android:id="@+id/tv_wrongNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="@dimen/hugeTitleTextSize"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_wrongNumberInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Yanlış"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_wrongNumber"
                app:layout_constraintStart_toStartOf="@+id/tv_wrongNumber"
                app:layout_constraintTop_toBottomOf="@+id/tv_wrongNumber" />

            <ImageView
                android:id="@+id/iv_wrongAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_red_cross"
                app:layout_constraintEnd_toEndOf="@+id/tv_wrongNumberInfo"
                app:layout_constraintStart_toStartOf="@+id/tv_wrongNumberInfo"
                app:layout_constraintTop_toBottomOf="@+id/tv_wrongNumberInfo"/>

            <TextView
                android:id="@+id/tv_emptyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="@dimen/hugeTitleTextSize"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_scoreNumber"
                app:layout_constraintStart_toEndOf="@+id/tv_wrongNumber"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_emptyNumberInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Boş"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_emptyNumber"
                app:layout_constraintStart_toStartOf="@+id/tv_emptyNumber"
                app:layout_constraintTop_toBottomOf="@+id/tv_emptyNumber" />

            <ImageView
                android:id="@+id/iv_emptyAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_empty_answer"
                app:layout_constraintEnd_toEndOf="@+id/tv_emptyNumberInfo"
                app:layout_constraintStart_toStartOf="@+id/tv_emptyNumberInfo"
                app:layout_constraintTop_toBottomOf="@+id/tv_emptyNumberInfo"/>


            <TextView
                android:id="@+id/tv_scoreNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="@dimen/hugeTitleTextSize"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.93"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_scoreNumberInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Puan"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_scoreNumber"
                app:layout_constraintStart_toStartOf="@+id/tv_scoreNumber"
                app:layout_constraintTop_toBottomOf="@+id/tv_scoreNumber" />

            <ImageView
                android:id="@+id/iv_scoreAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_score_icon"
                app:layout_constraintEnd_toEndOf="@+id/tv_scoreNumberInfo"
                app:layout_constraintStart_toStartOf="@+id/tv_scoreNumberInfo"
                app:layout_constraintTop_toBottomOf="@+id/tv_scoreNumberInfo"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_againResolve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_start_btn"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_questionIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_againResolve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/titleTextSize"
                    android:text="Tekrar Çöz"
                    android:textAllCaps="false"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>