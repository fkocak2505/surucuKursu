                    android:textSize="@dimen/descTextSize"
                    android:background="@drawable/bg_tckn"
                    android:text="Fatih"
                    android:textColor="@color/textColor"
                    android:padding="10dp"
                    android:layout_weight="3"
                    android:layout_marginTop="10dp"
