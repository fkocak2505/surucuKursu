                    android:textSize="@dimen/descTextSize"
                    android:background="@drawable/bg_tckn"
                    android:text="Fatih"
                    android:textColor="@color/textColor"
                    android:padding="10dp"
                    android:layout_weight="3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_kanGrubuInfo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/descTextSize"
                    android:text="Kan Grubu: "
                    android:textColor="@color/textColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tv_kanGrubu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/descTextSize"
                    android:background="@drawable/bg_tckn"
                    android:text="Fatih"
                    android:textColor="@color/textColor"
                    android:padding="10dp"
                    android:layout_weight="3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_onlineDersInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/descTextSize"
                    android:text="Online Ders Linki: "
                    android:textColor="@color/textColor"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tv_onlineDers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/descTextSize"
                    android:background="@drawable/bg_tckn"
                    android:text="Canlı Derse Katıl"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/titleTextSize"
                android:text="İletişim Bilgileri"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_adresInfo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/descTextSize"
                    android:textColor="@color/textColor"
                    android:text="Adres: "
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tv_adres"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/descTextSize"
